{
	"compilerOptions": {
		"allowJs": true,
		"allowSyntheticDefaultImports": true,
		"baseUrl": ".",
		"emitDecoratorMetadata": true,
		"esModuleInterop": true,
		"experimentalDecorators": true,
		"module": "commonjs",
		"moduleResolution": "node",
		"noImplicitAny": false,
		"paths": {
			"configs": ["src/config/*"],
			"controllers": ["src/controllers/*"],
			"middleware": ["src/middleware/*"],
			"models": ["src/models/*"],
			"utils": ["src/utils/*"],
			"schemas": ["../schemas/*"],
			"scripts": ["src/scripts/*"]
		},
		"outDir": "dist",
		"sourceMap": true,
		"strict": true,
		"target": "es6"
	},
	"exclude": ["node_modules", "build", "scripts"],
	"include": ["src/**/*.ts"]
}
