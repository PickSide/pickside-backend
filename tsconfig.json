{
	"compilerOptions": {
		"paths": {
			"controllers/*": ["/src/controllers/*"],
			"models/*": ["/src/models/*"],
			"utils/*": ["/src/utils/*"],
			"scripts/*": ["/src/scripts/*"]
		},
		"allowJs": true,
		"noImplicitAny": false,
		"module": "commonjs",
		"esModuleInterop": true,
		"target": "es6",
		"strict": true,
		"moduleResolution": "node",
		"sourceMap": true,
		"outDir": "dist",
		"baseUrl": "src",
		"rootDir": "src"
	},
	"typeRoots": ["node_modules/@types", "src/@types"],
	"exclude": ["node_modules", "build", "scripts"],
	"include": ["src/**/*"]
}
